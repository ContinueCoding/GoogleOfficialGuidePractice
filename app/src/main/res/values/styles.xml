<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--继承系统默认字体style，并修改颜色为红色-->
    <style name="CustomTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#f00</item>
    </style>

    <!--继承自定义字体style（逗号分割），并修改字号大小-->
    <style name="CustomTextStyle.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <!--继承自定义字体style（句号分割 - 可连续），并修改字号大小-->
    <style name="CustomTextStyle.Big.GREEN">
        <item name="android:textColor">#0f0</item>
    </style>

    <style name="CustomThemeOverlay" parent="Theme.AppCompat.Light">
        <item name="toolbarStyle">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

</resources>
