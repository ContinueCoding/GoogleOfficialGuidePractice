<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.huoxy.googleofficialpractice.apiguide.chapter1.ContentProviderActivity">

    <Button
        android:id="@+id/cp_user_dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="访问用户字典 - Content Provider"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/cp_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="批量访问 - Content Provider"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/cp_calendar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="日历 - 查看日历"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/cp_calendar_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="日历 - 插入事件"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/cp_calendar_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="日历 - 编辑事件"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/cp_contacts_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="联系人 - 用户个人资料"
        android:textAllCaps="false"
        />
</LinearLayout>
