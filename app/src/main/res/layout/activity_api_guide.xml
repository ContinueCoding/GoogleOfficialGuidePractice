<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huoxy.googleofficialpractice.apiguide.ApiGuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/app_components"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 - 应用组件"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/app_resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 - 应用资源（Borderless）"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/user_interface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 - 用户界面"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/animation_graphic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 - 动画和图形"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/media_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 - 多媒体App"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 - Location and Sensors"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="#000"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/connectivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 - Connectivity"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="#000"
            android:layout_margin="5dp"
            />
    </LinearLayout>

</ScrollView>
